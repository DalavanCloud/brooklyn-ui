.activity
    %fieldset{:class=>"tab-content-left-column"}
        //turn this into a grid, shouldnt be too hard//
        %legend Select Activity
        %table{:id=>"activitylist"}
    %fieldset{:class=>"tab-content-right-column"}
        %legend Activity Log
        //just put a large text box in here
        %textarea{:id=>"logbox",:readonly=>"true",:wrap=>"hard"}
        .buttons{:align=>"center"}
            %button{:id=>"selectButton",:onClick=>"selectLog()"} Select
            %button{:id=>"clearButton",:onClick=>"clearLog()"} Clear

